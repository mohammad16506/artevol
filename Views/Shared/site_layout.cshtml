
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Gal Art</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    
    <link href="~/Content/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/font-awesome.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Amaranth&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Alata&display=swap" rel="stylesheet" />
    <script src="~/Content/js/jquery-2.1.1.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <style>
        .disabled {
            pointer-events: none;
            cursor: default;
            opacity: 80%
        }
    </style>
</head>
<body>

    <section id="header" class="clearfix">
        <div class="container_1">
            <div class="row_1">
                <div class="header_1 text-center clearfix">
                    <div class="col-sm-12">
                        <h1 class="mgt">
                            <a href="@Url.Action("Index","Products")"><span class="col_1">Art</span>Evol</a>
                        </h1>
                    </div>
                </div>
                <nav class=" navbar header_2 navbar-expand-lg  " style="position: sticky !important;top:0;">
                    <div class="container-fluid" style="justify-content: flex-end;">

                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            
                                
                            <ul class="nav navbar-nav">

                                <li><a class="nav-item m_tag " href="@Url.Action("Index","Products")">Home</a></li>
                                <li><a class="nav-item m_tag" href="@Url.Action("About","Products")">About Us</a></li>
                                <li><a class="nav-item m_tag" href="@Url.Action("List","Products")">Products</a></li>
                                @if (Session["uId"] == null)
                                {
                                    <li><a class="nav-item m_tag" href="@Url.Action("Login", "Users")">SignIn</a></li>
                                }
                                <li><a class="nav-item m_tag" href="@Url.Action("Request","Users")">Contact Us</a></li>

                                @if (Session["role"] != null && (int)Session["role"] == 3)
                                {
                                    <li><a class="nav-item m_tag" href="@Url.Action("Create","products")">List My Product</a></li>
                                }
                                <li><a class="nav-item m_tag" href="@Url.Action("cart","Products")"><i class="fa fa-shopping-cart"></i> <span>@Session["count"]</span> </a></li>
                                @if (Session["role"] != null && (int)Session["role"] == 2)
                                {
                                    <li><a class="nav-item m_tag" href="@Url.Action("Request", "Users")">Request</a></li>
                                }
                                @if (Session["role"] != null && (int)Session["role"] == 1)
                                {
                                    <li><a class="nav-item m_tag" href="@Url.Action("Index", "Users")">USERS</a></li>
                                    <li><a class="nav-item m_tag" href="@Url.Action("RequestShow", "Users")">REQEUSTS</a></li>
                                    <li><a class="nav-item m_tag" href="@Url.Action("AdminList", "Products")">PRODUCT LIST</a></li>
                                    <li><a class="nav-item m_tag" href="@Url.Action("Index", "Orders")">ORDER LIST</a></li>

                                }
                                @if (Session["uId"] != null)
                                {

                                    <li><a class="nav-item m_tag" href="@Url.Action("uOrder", "Orders",  new { uid = Session["uId"] })">Orders</a></li>
                                    <li><a class="nav-item m_tag text-danger" href="@Url.Action("Logout", "Users")">Logout</a></li>
                                }


                                <li class="dropdown dropdown-large"></li>
                            </ul>

                        </div>
                    </div>
                </nav>
            </div>
        </div>
        
    </section>

    <div class="">
        @RenderBody()
    </div>
    <section id="footer" style="border-bottom:2px solid #000">
        <div class="container">
            <div class="row">
                <div class="footer_1 clearfix">
                    <div class="col-sm-3">
                        <div class="footer_1i clearfix">
                            <h1 class="mgt">
                                <a href="index.html"><span class="col_1">Art</span> Evol</a>
                            </h1>
                            <p>"Where art meets evolution in every pixel"</p>
                            <ul class="social-network social-circle">
                                <li>
                                    <a href="#" class="icoRss" title="Rss"><i class="fa fa-rss"></i></a>
                                </li>
                                <li>
                                    <a href="#" class="icoFacebook" title="Facebook"><i class="fa fa-facebook"></i></a>
                                </li>
                                <li>
                                    <a href="#" class="icoTwitter" title="Twitter"><i class="fa fa-twitter"></i></a>
                                </li>
                                <li>
                                    <a href="#" class="icoGoogle" title="Google +"><i class="fa fa-google-plus"></i></a>
                                </li>
                                <li>
                                    <a href="#" class="icoLinkedin" title="Linkedin"><i class="fa fa-linkedin"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="footer_1i clearfix">
                            <h4>Our Company</h4>
                            <h6><a href="#">Home</a></h6>
                            <h6><a href="#">About</a></h6>
                            <h6><a href="#">Contact</a></h6>
                            <h6><a href="#">Login</a></h6>
                            <h6><a href="#">Register</a></h6>
                            <h6><a href="#">Request</a></h6>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="footer_1i clearfix">
                            <h4>Products</h4>
                            <h6><a href="#">Paintings</a></h6>
                            <h6><a href="#">Sculptures</a></h6>
                            <h6><a href="#">Drawings</a></h6>
                            <h6><a href="#">Photography</a></h6>
                            <h6><a href="#">Digital Art</a></h6>
                            <!-- <h6><a href="#">Mixed Media</a></h6> -->
                            <h6><a href="#">Prints</a></h6>
                            <!-- <h6><a href="#">Ceramics</a></h6> -->
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="footer_1i clearfix">
                            <h4>Contact Us</h4>
                            <h6>
                                <a href="#"><i class="fa fa-map-marker col_1"></i> APTECH UNIVERSTIY ROAD CENTER</a>
                            </h6>
                            <h6>
                                <a href="#"><i class="fa fa-phone col_1"></i> 0123456789</a>
                            </h6>
                            <h6>
                                <a href="#"><i class="fa fa-fax col_1"></i> 0123456789</a>
                            </h6>
                            <h6>
                                <a href="#"><i class="fa fa-envelope col_1"></i> info@gmail.com</a>
                            </h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="footer_bottom">
        <div class="container">
            <div class="row">
                <div class="footer_b clearfix">

                    <div class="col-sm-12 space_left">
                        <div class="footer_bl text-right clearfix">
                            <p class="mgt text-center">
                                © 2024 All Rights Reserved by ArtEvol
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    

</body>
</html>

